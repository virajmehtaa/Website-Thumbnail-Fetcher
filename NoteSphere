    <script>
        // Simple demo functionality
        document.addEventListener('DOMContentLoaded', function() {
            const textarea = document.querySelector('textarea');
            const publishBtn = document.querySelector('.publish-btn');
            const noteFeed = document.querySelector('.note-feed');
            
            publishBtn.addEventListener('click', function() {
                const noteText = textarea.value.trim();
                if (noteText) {
                    // Create new note card
                    const noteCard = document.createElement('div');
                    noteCard.className = 'note-card';
                    
                    // Current time
                    const now = new Date();
                    const timeString = 'Just now';
                    
                    noteCard.innerHTML = `
                        <div class="note-header">
                            <span class="note-author">Jane Doe</span>
                            <span class="note-time">${timeString}</span>
                        </div>
                        <div class="note-content">
                            <p>${noteText.replace(/\n/g, '</p><p>')}</p>
                        </div>
                        <div class="note-footer">
                            <div class="note-stats">
                                <span>0 Likes</span> • 
                                <span>0 Comments</span> • 
                                <span>0 Saves</span>
                            </div>
                            <div class="note-actions">
                                <button>Like</button> • 
                                <button>Comment</button> • 
                                <button>Save</button> • 
                                <button>Share</button>
                            </div>
                        </div>
                    `;
                    
                    // Insert at the beginning of the feed
                    noteFeed.insertBefore(noteCard, noteFeed.firstChild);
                    
                    // Clear the textarea
                    textarea.value = '';
                }
            });
            
            // Like functionality demo
            document.addEventListener('click', function(e) {
                if (e.target.textContent === 'Like') {
                    const noteCard = e.target.closest('.note-card');
                    const statsText = noteCard.querySelector('.note-stats').firstChild;
                    const currentLikes = parseInt(statsText.textContent);
                    statsText.textContent = `${currentLikes + 1} Likes`;
                }
            });
        });
    </script>
